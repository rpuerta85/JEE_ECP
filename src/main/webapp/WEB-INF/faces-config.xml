<?xml version="1.0" encoding="UTF-8"?>
<faces-config xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd"
	version="2.2">
	<navigation-rule>
		<from-view-id>/jsf/homeJSF.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>votar</from-outcome>
			<to-view-id>/jsf/votar.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>verVotaciones</from-outcome>
			<to-view-id>/jsf/verVotaciones.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>aniadirTema</from-outcome>
			<to-view-id>/jsf/aniadirTema.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>eliminarTema</from-outcome>
			<to-view-id>/jsf/eliminarTema.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>volverAlHome</from-outcome>
			<to-view-id>index.jsp</to-view-id>
		</navigation-case>
		
		<!-- Por defecto -->
		<navigation-case>
			<if>#{!votar.value}</if>
			<to-view-id>/jsf/homeJSF.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	
	<application>
		<locale-config>
			<default-locale>es</default-locale>
			<supported-locale>en</supported-locale>
		</locale-config>
		<resource-bundle>
			<base-name>i18n.messages</base-name>
			<var>msgs</var>
		</resource-bundle>
	</application>

</faces-config>
